{
    "name": "nice/if",
    "description": "A package to make calling of if and else smarter and cleaner.",
    "keywords": ["iftt", "if this then that", "conditionals", "condition", "if else"],
    "license": "MIT",
    "require": {
        "php": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "files": [
          "functions/condition.php"
        ],
        "psr-4": {
            "NiceIf\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NiceIf\\": "tests"
        }
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true
    }
}
